<?xml version="1.0" encoding="utf-8" ?>
<widget id="widget.Glocation" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Glocation</name>
    <description>Glocation helps to get the current location of the user</description>

    <icon />

    <properties>
       <property key="latitudeAttribute" type="attribute" required="false" entityProperty="locationEntity">
            <caption>latitude</caption>
            <category>Data source</category>
            <description>The geo-latitude coordinates of your location</description>
            <attributeTypes>
                <attributeType name="String" />
            </attributeTypes>
        </property>
        <property key="onchangemf" type="microflow" required="true">
            <caption>Server microflow</caption>
            <category>Send</category>
            <description></description>
            <returnType type="Void"/>
        </property>
        <property key="longitudeAttribute" type="attribute" required="false" entityProperty="locationEntity">
            <caption>longitude</caption>
            <category>Data source</category>
            <description>The geo-longitude coordinates of your location</description>
            <attributeTypes>
                <attributeType name="String"/>
            </attributeTypes>
        </property>
        <property key="locationEntity" type="entity" required="true">
        <caption>Location Entity</caption>
        <category>Data source</category>
        <description>Location</description>
        </property>
        <property key="micro" type="microflow" required="false">
            <caption> Send to Server</caption>
            <category>Behavior</category>
            <description>The microflow sends the geo-coordinates to the server</description>
            <returnType type="Boolean"/>
        </property>
    </properties>
</widget>

